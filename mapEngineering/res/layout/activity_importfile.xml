<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <TextView android:id="@+id/filePathShow"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
		android:text="请点击‘选择文件’按钮选择数据文件"
        />
    
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8f8f8f"/>
    
    <TextView android:id="@+id/projectShow"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="只有导入了里程文件才能开始测量"
        />
    
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:gravity="bottom"
		android:orientation="vertical" >
        
        <Button
        android:id="@+id/button_openfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lakeBlue1"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="选择文件" />
        
        <View android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/gray"/>
		
		<Button android:id="@+id/start"
			android:layout_width="match_parent"
			android:layout_height="50dp"
        	android:background="@color/lakeBlue1"
        	android:textSize="20dp"
        	android:textColor="@color/white"
			android:gravity="center"
			android:enabled="false"
			android:text="导入数据并测量" />	
	</LinearLayout>
	
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:gravity="bottom"
		android:orientation="horizontal" >
        
        
    
	</LinearLayout>

</LinearLayout>
